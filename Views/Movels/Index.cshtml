@model IEnumerable<PBL.Models.Movel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medidas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Funcionarios)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Funcionarios.Valor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medidas)
            </td>
            <td>
               <a href="@Html.DisplayFor(modelItem => item.Link)"> @Html.DisplayFor(modelItem => item.Link)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Funcionarios.NomeFuncionario)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Funcionarios.Valor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MovelId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MovelId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MovelId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
